#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> ratings(n);
    for (int i = 0; i < n; i++) cin >> ratings[i];

    vector<int> candies(n, 1); // everyone gets at least 1

    // left to right
    for (int i = 1; i < n; i++) {
        if (ratings[i] > ratings[i-1])
            candies[i] = candies[i-1] + 1;
    }

    // right to left
    for (int i = n-2; i >= 0; i--) {
        if (ratings[i] > ratings[i+1])
            candies[i] = max(candies[i], candies[i+1]+1);
    }

    int total = 0;
    for (int i = 0; i < n; i++) total += candies[i];

    cout << "Minimum candies needed = " << total << endl;
}
