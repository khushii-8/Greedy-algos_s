#include <bits/stdc++.h>
using namespace std;

void maxMeetings(vector<int>& start, vector<int>& end) {
    int n = start.size();
    vector<pair<int,int>> m;
    for (int i=0;i<n;i++) m.push_back({end[i], start[i]});
    sort(m.begin(), m.end());   // sort by end time

    int count = 1, lastEnd = m[0].first;
    cout << "Meetings: " << 1 << " ";
    for (int i=1;i<n;i++) {
        if (m[i].second > lastEnd) {
            count++;
            cout << i+1 << " ";
            lastEnd = m[i].first;
        }
    }
    cout << "\nMax meetings = " << count << "\n";
}

int main() {
    int n; cin >> n;
    vector<int> start(n), end(n);
    for (int i=0;i<n;i++) cin >> start[i];
    for (int i=0;i<n;i++) cin >> end[i];
    maxMeetings(start, end);
}
