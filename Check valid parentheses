#include <bits/stdc++.h>
using namespace std;

bool checkValidString(string s) {
    int low = 0, high = 0; // range of open parentheses count
    for (int i = 0; i < s.size(); i++) {
        if (s[i] == '(') {
            low++; high++;
        } else if (s[i] == ')') {
            if (low > 0) low--;
            high--;
        } else { // '*'
            if (low > 0) low--; // treat as ')'
            high++;            // treat as '('
        }
        if (high < 0) return false; // too many ')'
    }
    return (low == 0);
}

int main() {
    string s;
    cin >> s;
    if (checkValidString(s))
        cout << "Valid\n";
    else
        cout << "Invalid\n";
}
