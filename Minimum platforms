#include <bits/stdc++.h>
using namespace std;

int minPlatforms(vector<int>& arr, vector<int>& dep) {
    int n = arr.size();
    sort(arr.begin(), arr.end());
    sort(dep.begin(), dep.end());

    int i = 0, j = 0;
    int platforms = 0, maxPlatforms = 0;

    while (i < n && j < n) {
        if (arr[i] <= dep[j]) {   // a train arrives before the earliest departure
            platforms++;
            if (platforms > maxPlatforms) maxPlatforms = platforms;
            i++;
        } else {                  // next event is a departure
            platforms--;
            j++;
        }
    }
    return maxPlatforms;
}

int main() {
    int n; 
    cin >> n;                       // number of trains
    vector<int> arr(n), dep(n);
    for (int i = 0; i < n; i++) cin >> arr[i];   // arrival times
    for (int i = 0; i < n; i++) cin >> dep[i];   // departure times

    cout << minPlatforms(arr, dep) << '\n';
    return 0;
}
